{
  "name": "k8s-deployment-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for managing Kubernetes deployments with AI-driven automation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run lint:fix && git add -A src",
    "postversion": "git push && git push --tags",
    "docker:build": "docker build -t k8s-mcp-server .",
    "docker:build-multi": "docker build -f Dockerfile.multistage -t k8s-mcp-server:latest .",
    "docker:run": "docker run --rm -v ~/.kube:/home/mcp/.kube:ro k8s-mcp-server:latest",
    "docker:compose": "docker-compose up -d",
    "docker:compose-dev": "docker-compose -f docker-compose.yml up --build",
    "docker:compose-down": "docker-compose down",
    "release": "npm version patch && npm run docker:build-multi",
    "release:minor": "npm version minor && npm run docker:build-multi",
    "release:major": "npm version major && npm run docker:build-multi",
    "policy:check": "node scripts/policy-cli.mjs check",
    "policy:report": "node scripts/policy-cli.mjs report",
    "policy:fix": "node scripts/policy-cli.mjs fix",
    "policy:rules": "node scripts/policy-cli.mjs rules"
  },
  "keywords": [
    "mcp",
    "kubernetes",
    "deployment",
    "automation",
    "ai",
    "devops",
    "model-context-protocol"
  ],
  "author": "tsviz",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "zod": "^3.23.8",
    "@kubernetes/client-node": "^0.21.0",
    "commander": "^11.0.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tsviz/k8s-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/tsviz/k8s-mcp/issues"
  },
  "homepage": "https://github.com/tsviz/k8s-mcp#readme"
}
